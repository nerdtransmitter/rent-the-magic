<div class = "container form-container ">
  <div class="row my-5">
    <div class="col-8">
      <%= simple_form_for(costume) do |f| %>
        <%= f.input :name %>
        <%= f.input :category, as: :select, collection: ["unicorn", "wizard", "hobbit", "dragon", "elf","dwarf", "princess", "other"]%>
        <%= f.input :size, as: :select, collection: ["XS", "S", "M", "L", "XL", "XXL"] %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :location %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn-flat border border-light mt-3"%>
      <% end %>
      </div>
      <div class="col-4 mt-2 mb-2">
      <%= image_tag "illu2.PNG", class: "fairy"%>
      </div>
    </div>
</div>
