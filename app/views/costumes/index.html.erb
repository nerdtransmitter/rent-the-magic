<h1 class="text-center fw-bolder m-3">Rent The Magic</h1>

<div style="width: 100%; height: 600px; margin-bottom: 40px"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="cards">
  <% @costumes.each do |costume| %>
  <div class="card">
    <h3><%= costume.name %></h3>
    <div class="card-img-container d-flex justify-content-center align-items-center w-100">
      <%= cl_image_tag costume.photo.key, height: 300, width: 200, crop: :fill %>
    </div>
    <p class="card-price"><%= number_to_currency(costume.price) %></p>
    <p><%= costume.location %></p>
    <%= link_to "Rent this costume!", costume_path(costume), class: "btn btn-ghost mb-3 fw-bolder"%>
  </div>
  <% end %>
</div>
