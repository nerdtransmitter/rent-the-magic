<%# <div class="container"> %>
<div class="d-flex justify-content-between">


    <div class="costumes-container col-7 rounded">
      <h1 class="m-4 text-center glow">my costumes</h1>
      <div class="cards-costumes text-center w-100">
        <% @costumes.each do |costume| %>
          <div class="card p-2 shadow-lg">
            <div class="d-flex justify-content-between align-items-center m-2">
              <h4><%= costume.name %></h4>
              <h4 class="card-price fw-bolder"><small><%= number_to_currency(costume.price) %></small></h4>
            </div>
            <div class="d-flex justify-content-center align-items-center w-100">
              <%= cl_image_tag costume.photo.key, height: 300, width: 200, crop: :fill %>
            </div>
            <%# <%= cl_image_tag costume.photo.key, height: 300, width: 200, crop: :fill %>
            <div class="d-flex justify-content-end">
              <% if policy(costume).edit? %>
                <%= link_to "Edit", edit_costume_path(costume), class: "btn btn-ghost" %>
              <% end %>
              <!-- [...] -->
              <%= button_to costume,
                method: :delete,
                data: { turbo_confirm: "Are you sure?" },
                class: "btn btn-ghost" do %>
                <i class="fas fa-trash-alt"></i>
              <% end if policy(costume).destroy? %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bookings-container col-3">
      <h3 class="m-4 text-end text-white">my rentals</h3>
        <div class="bookings-cards">
          <% @bookings.each do |booking| %>
            <div class="collapsible-container mb-3">
              <button type="button" class="collapsible"><%= booking.costume.name %></button>
                <div class="content">
                  <div class="">
                    <div>
                      <p><strong>From: </strong><%= booking.start_date %></p>
                      <p><strong>To: </strong><%= booking.end_date %></p>
                    </div>
                    <div class="d-flex text-end">
                      <% if policy(booking).edit? %>
                        <%= link_to "Edit", edit_booking_path(booking), class: "btn btn-ghost" %>
                      <% end %>
                      <%= button_to booking,
                        method: :delete,
                        data: { turbo_confirm: "Are you sure?" },
                        class: "btn btn-ghost" do %>
                        <i class="fas fa-trash-alt"></i>
                      <% end if policy(booking).destroy? %>
                    </div>
                  </div>
                </div>
            </div>
          <% end %>
        <br>
        <div>
          <h3 class="m-4 text-end text-white fw-bolder">my requests</h3>
          <div class="booking-cards">
            <% @requests.each do |request| %>
              <% request.each do |r| %>
                <div class="card-request d-flex bg-white p-2 mb-3 rounded collapsible">
                  <div>
                    <p><strong>From: </strong><%= r.start_date %></p>
                    <p><strong>To: </strong><%= r.end_date %></p>
                  </div>
                  <%= button_to 'Approve', approve_booking_path(r), class: "btn btn-ghost" %>
                  <% if r.state == 'approved'%>
                    <%= image_tag 'approved', class: "approved" %>
                  <% end %>
                </div>

              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
 </div>
<%# </div> %>
