<%# <div class="container"> %>
<h2>Hello  <%=  current_user.email %></h2>
<div class="d-flex justify-content-between">


    <div class="costumes-container col-7 rounded">
      <h1 class="title">My costumes</h1>

      <div class="cards-costumes text-center w-100">
        <% @costumes.each do |costume| %>
          <div class="card-costume shadow-lg" style="background-image: url(<%=cl_image_path costume.photos.first.key%>)">
            <div class="overlay"></div>
            <div class="card-buttons">
                <% if policy(costume).edit? %>
                  <%= link_to "Edit", edit_costume_path(costume), class: "btn btn-white" %>
                <% end %>
                <!-- [...] -->
                <%= button_to costume,
                  method: :delete,
                  data: { turbo_confirm: "Are you sure?" },
                  class: "btn btn-white" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end if policy(costume).destroy? %>
              </div>
            <div class="costume-info">
              <h4><%= costume.name %></h4>
              <%# <h4 class="card-price fw-bolder"><small><%= number_to_currency(costume.price) %>
              <%# </small></h4> %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="bookings-container col-3">
      <h3 class="m-4 text-end text-white">my rentals</h3>
        <div class="bookings-cards">
          <% @bookings.each do |booking| %>
            <div class="collapsible-container mb-3">
              <button type="button" class="collapsible"><%= booking.costume.name %></button>
                <div class="content">
                  <div class="d-flex justify-content-between my-2">
                    <p><strong></strong><%= booking.start_date %> <i class="fa-solid fa-arrow-right"></i> <%= booking.end_date %></p>
                    <div class="d-flex text-end">
                      <% if policy(booking).edit? %>
                        <%= link_to edit_booking_path(booking), class: "btn btn-ghost" do %>
                          <i class="fa-solid fa-pen-to-square"></i>
                        <% end %>
                      <% end %>
                      <%= button_to booking,
                        method: :delete,
                        data: { turbo_confirm: "Are you sure?" },
                        class: "btn btn-ghost" do %>
                        <i class="fas fa-trash-alt"></i>
                      <% end if policy(booking).destroy? %>
                    </div>
                  </div>
                </div>
            </div>
          <% end %>
        <br>
        <div>
          <h3 class="m-4 text-end text-white fw-bolder">my requests</h3>
          <div class="booking-cards">
            <% @requests.each do |request| %>
              <% request.each do |r| %>
                <div class="card-request bg-white p-2 mb-3 rounded collapsible d-flex justify-content-between">
                  <%= cl_image_tag r.costume.photo.key %>
                  <div>
                    <h5><%= r.costume.name %></h5>
                    <p style="font-family: 'Poppins'"><%= r.start_date %> <i class="fa-solid fa-arrow-right"></i> <%= r.end_date %></p>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <%= button_to approve_booking_path(r),
                      class: "btn btn-ghost" do %>
                      <i class="fa-solid fa-thumbs-up"></i>
                    <% end %>
                  </div>
                  <% if r.state == 'approved'%>
                    <%= image_tag 'approved', class: "approved" %>
                  <% end %>
                </div>

              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
 </div>
<%# </div> %>
